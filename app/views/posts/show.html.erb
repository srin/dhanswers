<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @post.location %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>

<p>
  <strong>Disability:</strong>
  <%= @post.disability %>
</p>

<h3 class="comments_title">
  <%= @post.comments.count %> Comments
</h3>

<% @post.comments.each do |comment| %>

<p> <%= simple_format comment.body %> by <%= comment.user_id %> who has karma: <%= comment.user.karma %></p>
<p> <%= link_to "upvote", like_post_comment_path(@post, comment), method: :put %></p>
<p> <%= link_to "downvote", dislike_post_comment_path(@post, comment), method: :put %></p>
<p>Score: <%= comment.get_upvotes.size - comment.get_downvotes.size %> </p>
<%end%>

<%= simple_form_for [@post, Comment.new]  do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
