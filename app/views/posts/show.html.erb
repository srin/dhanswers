
<div class="row">
            <div class="large-2 columns small-3"><img src="http://placehold.it/80x80&text=[img]" /></div>
              <div class="large-8 columns">
                <h3><strong> <%=@post.title%></strong> </h3>
              </div>
            <div class="large-10 columns">
              <p><i>posted by</i> <strong> <%=@post.user.email%></strong> </p>
              <p> <%= @post.description %></p>
              <ul class="inline-list">
                
              </ul>    
            </div>
          </div>

              <h4> <%= "#{@post.comments.count} answers".html_safe%></h4>
                <% @post.comments.each do |comment| %>
              <div class="row">
                <div class="large-2 columns small-3"><img src="http://placehold.it/50x50&text=[img]" /></div>
                <div class="large-10 columns">
                  <p>By <%= comment.user.email %> | User rating points: <%= comment.user.karma %></p>
                  <p><%= simple_format comment.body %> </p></div>
              </div>
                <div class="large-6 columns"></div>
                <p> <%= link_to "upvote", like_post_comment_path(@post, comment), method: :put %> | <%= link_to "downvote", dislike_post_comment_path(@post, comment), method: :put %> <br>
                Total score: <%= comment.get_upvotes.size - comment.get_downvotes.size %> </p>

              <%end%>

<%= simple_form_for [@post, Comment.new]  do |f| %>
  <h3>Share an answer </h3>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
