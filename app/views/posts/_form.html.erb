<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "1. Question title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "2. Description (optional)" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location, "3. Does your question relate to a specific country? If so, which one?" %><br>
    <%= f.country_select :location, ["United Kingdom", "United States"]  %>
  </div>
  <div class="field">
    <%= f.label :category, "4. Please choose which category your question relates to?"%> <br>
      <%= f.collection_select :category_id, Category.all, :id, :name %> <br>
  </div>
  <div class="field">
    <%= f.label :disability, "5. Does your question relate to a specific disability? If so, which one?" %><br>
    <%= f.text_field :disability %>
  </div>
  <div class="actions">
    <%= f.submit class: "button success"%>
  </div>
<% end %>

